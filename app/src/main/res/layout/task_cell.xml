<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:id="@+id/tvTaskName"
        android:layout_alignBaseline="@+id/chkStatus"
        android:layout_alignBottom="@+id/chkStatus"
        android:layout_alignParentStart="true"
        style="@style/EnumIDText"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:id="@+id/tvTaskID"
        android:layout_alignBottom="@+id/tvTaskName"
        android:layout_toEndOf="@+id/tvTaskName"
        android:layout_marginStart="31dp"
        style="@style/EnumIDText"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"

        android:id="@+id/tvTaskDuration"
        android:layout_alignBaseline="@+id/tvTaskID"
        android:layout_alignBottom="@+id/tvTaskID"
        android:layout_toEndOf="@+id/tvTaskID"
        style="@style/EnumIDText"/>

    <CheckBox
        android:text="Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:id="@+id/chkStatus"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:clickable="false"
        style="@style/EnumIDText"/>
</RelativeLayout>